<div class="container" style="margin-top: 50px;">
  <p id="role_notice" class="text-success"></p>
  <div class="form-group">
    <label>Select Role</label>
    <%=select_tag :roles,options_from_collection_for_select( @roles,"id", "name"),{class: 'form-control',onchange: 'changeRole()'}%>
  </div>
  <div class="form-group">
      <button class="btn btn-primary" onclick="changeRole()">Change Role</button>
  </div>
</div>
